<!-- START PRODUCT-->
<div class="four columns {% cycle 'alpha','','omega' %}">
	<a href="{{ collection.url }}" id="product-{{ forloop.index }}" class="animated fadeInUpBig">
		<img src="{{ collection.products.first.featured_image.src | product_img_url: 'large' }}" alt="{{ collection.title | escape }}" class="product" /><br>
		<h3>{{ collection.title }} ({{ collection.all_products_count }} {{ collection.all_products_count | pluralize:'item','items' }})</h3>
	</a>
</div>
<!--END PRODUCT-->
{% cycle '', '', '<br class="clear">' %}