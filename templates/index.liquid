{% comment %}{% if settings.show_frontpage_hero == true %}
<!--START BANNER-->
<div class="twelve columns alpha omega">
	<section id="hero" class="alpha omega animated fadeInUpBig {% if settings.frontpage_hero_header == blank %}no-text{% endif %}">
		<a href="{{ settings.banner_url }}"><img src="{{ 'hero.jpg' | asset_url }}" alt="{{ settings.frontpage_hero_alt }}"></a>
	</section>
</div>
<!--END BANNER-->
{% endif %}{% endcomment %}

<section am-Grid-Row="wrap">

  {% include 'zd' %}

  {% comment %}{% include 'dz' %}{% endcomment %}

  <div am-DZ>
    <div am-offset-bottom="auto" am-Flex-Item="end">
      {% include 'cart-toggle' %}
    </div>
    <img src="{{ 'DZ-01.svg' | asset_url }}"/>
  </div>



{% comment %}  <div am-Block="x3" style="background:red;">

  </div>

  <div am-Block="x2" style="background:red;">

  </div>

  <div am-Block="x1" style="background:red;">

  </div>
{% endcomment %}

	{% assign collection = collections.[settings.frontpage_collection] %}
	{% for product in collection.products %}
  <div am-Collection-Item am-Flex-Item="order:{{ forloop.index }}">
		{% include 'product-grid-item-new' %}
  </div>
	{% endfor %}


</section>

