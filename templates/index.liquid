{% if settings.show_frontpage_hero == true %}
<!--START BANNER-->
<div class="twelve columns alpha omega">
	<section id="hero" class="alpha omega animated fadeInUpBig {% if settings.frontpage_hero_header == blank %}no-text{% endif %}">
		<a href="{{ settings.banner_url }}"><img src="{{ 'hero.jpg' | asset_url }}" alt="{{ settings.frontpage_hero_alt }}"></a>
	</section>
</div>
<!--END BANNER-->
{% endif %}

<section am-Grid-Row="wrap">

  <div am-ZD>
    <img src="{{ 'ZD-01.svg' | asset_url }}"/>
    {% include 'navigation' %}
    <div am-Search id="product-search">
      <form action="/search" method="get" class="search-form" role="search">
        <input type="hidden" name="type" value="product" />
        {% comment %}<input type="submit" id="search-submit" class="icon {% if settings.light_search_icon %}light{% endif %}" />{% endcomment %}
        <input class="search" placeholder="Search" name="q" type="text" id="search-field"  />
      </form>
    </div>

  </div>

  <div am-DZ>
    <img src="{{ 'DZ-01.svg' | asset_url }}"/>
  </div>


	{% assign collection = collections.[settings.frontpage_collection] %}
	{% for product in collection.products %}
  <div am-Collection-Item style="order:{{ forloop.index }};">
		{% include 'product-grid-item-new' %}
  </div>
	{% endfor %}

</section>

