{% layout settings.customer_layout %}

<div class="content clearfix">

  <div class="page-header clearfix">
    <h1 id="page-title">Manage Address</h1>
  </div><!-- /.page-header -->
  
  <div class="clearfix">
    
    <div id="page-actions">
      <a href="#" class="button2" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">Add New Address</a>
    </div>
    
    <div id="add_address" class="customer_address edit_address" style="display:none;">
      {% form 'customer_address', customer.new_address %}
        <h2 id="add_address_title">Add a new address</h2>
        <fieldset class="customer_address_table">
          <fieldset>
            <label for="address_first_name_new" class="label1">First Name</label>
            <input type="text" id="address_first_name_new" class="address_form" name="address[first_name]" value="{{form.first_name}}" />
          </fieldset>
          <fieldset>
            <label for="address_last_name_new" class="label1">Last Name</label>
            <input type="text" id="address_last_name_new" class="address_form" name="address[last_name]" value="{{form.last_name}}" />
          </fieldset>
          <fieldset>
            <label for="address_company_new" class="label1">Company</label>
            <input type="text" id="address_company_new" class=" address_form" name="address[company]" value="{{form.company}}" />
          </fieldset>
          <fieldset>
            <label for="address_address1_new" class="label1">Address1</label>
            <input type="text" id="address_address1_new" class="address_form" name="address[address1]" value="{{form.address1}}" />
          </fieldset>
          <fieldset>
            <label for="address_address2_new" class="label1">Address2</label>
            <input type="text" id="address_address2_new" class="address_form" name="address[address2]" value="{{form.address2}}" />
          </fieldset>
          <fieldset>
            <label for="address_city_new" class="label1">City</label>
            <input type="text" id="address_city_new" class="address_form" name="address[city]" value="{{form.city}}" />
          </fieldset>
          <fieldset>
            <label for="address_country_new" class="label1">Country</label>
            
              <select id="address_country_new" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
            
          </fieldset>
          <fieldset id="address_province_container_new" style="display:none">
            <label for="address_province_new" class="label1">Province</label>
            
              <select id="address_province_new" class="address_form" name="address[province]" data-default="{{form.province}}"></select>
            
          </fieldset>
          <fieldset>
            <label for="address_zip_new" class="label1">Zip</label>
            <input type="text" id="address_zip_new" class="address_form" name="address[zip]" value="{{form.zip}}" />
          </fieldset>
          <fieldset>
            <label for="address_phone_new" class="label1">Phone</label>
            <input type="text" id="address_phone_new" class="address_form" name="address[phone]" value="{{form.phone}}" />
          </fieldset>
          <fieldset class="set_default">
            
            {{ form.set_as_default_checkbox }} Set as Default Address?
          </fieldset>
        </fieldset>
      <div class="clearfix></div>"
        <div class="action-bottom clearfix">
          <input type="submit" value="Add Address" />
          <input type="button" value="Cancel" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;" />
        </div>
      {% endform %}
    </div>
  </div>

  
  <div class="clearfix">
    <div id="address_tables">  
    {% paginate customer.addresses by 10 %}
      
      {% for address in customer.addresses %}
      {% cycle '<div class="grid-container remove_padding">', '' %}
      <div class="remove_padding grid-50 tablet-grid-50 {% cycle 'first', 'last' %}">
        <div class="address_table">
        <div id="edit_address_{{address.id}}" class="customer_address edit_address clearfix" style="display:none;">
          {% form 'customer_address', address %}
            <fieldset class="customer_address_table">
              <fieldset>
                <label class="label1" for="address_first_name_{{form.id}}">First Name</label>
                <input type="text" id="address_first_name_{{form.id}}" class="address_form" name="address[first_name]" value="{{form.first_name}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_last_name_{{form.id}}">Last Name</label>
                <input type="text" id="address_last_name_{{form.id}}" class="address_form" name="address[last_name]" value="{{form.last_name}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_company_{{form.id}}">Company</label>
                <input type="text" id="address_company_{{form.id}}" class="address_form" name="address[company]" value="{{form.company}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_address1_{{form.id}}">Address1</label>
                <input type="text" id="address_address1_{{form.id}}" class="address_form" name="address[address1]" value="{{form.address1}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_address2_{{form.id}}">Address2</label>
                <input type="text" id="address_address2_{{form.id}}" class="address_form" name="address[address2]" value="{{form.address2}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_city_{{form.id}}">City</label>
                <input type="text" id="address_city_{{form.id}}" class="address_form" name="address[city]" value="{{form.city}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_country_{{form.id}}">Country</label>
                <select id="address_country_{{form.id}}"  name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
              </fieldset>
              <fieldset id="address_province_container_{{form.id}}" style="display:none">
                <label class="label1" for="address_province_{{form.id}}">Province</label>
                <select id="address_province_{{form.id}}" class="address_form" name="address[province]" data-default="{{form.province}}"></select>
              </fieldset>
              <fieldset>
                <label class="label1" for="address_zip_{{form.id}}">Zip</label>
                <input type="text" id="address_zip_{{form.id}}" class="address_form" name="address[zip]" value="{{form.zip}}" />
              </fieldset>
              <fieldset>
                <label class="label1" for="address_phone_{{form.id}}">Phone</label>
                <input type="text" id="address_phone_{{form.id}}" class="address_form" name="address[phone]" value="{{form.phone}}" />
              </fieldset>      
              <fieldset>
                {{ form.set_as_default_checkbox }} Set as Default Address?
              </fieldset>
            </fieldset> 
            <div class="action-bottom">
              <input  type="submit" value="Update Address" />
              <input  type="button" value="Cancel" onclick="Shopify.CustomerAddress.toggleForm({{form.id}}); return false;" />
            </div>
          <br/>
          {% endform %}
          
        </div>
        <div class="clearfix"></div>
        
        <div id="view_address_{{address.id}}" class="grid-container customer_address">
          <div id="tool_address_{{address.id}}" class="address_actions address_actions grid-30 push-70 remove_padding">
            <span class="action_edit"><i class = "icon-edit"></i>{{ "Edit" | edit_customer_address_link: address.id }}</span>
            <span class="action_delete"><i class = "icon-remove-circle"></i>{{ "Delete" | delete_customer_address_link: address.id }}</span>
          </div>
          <address class="address_info grid-70 pull-30 remove_padding clearfix">
            <div class="name">
              <span class="i-author"><i class = "icon-user"></i></span>
              <span class="author">
                {{ address.first_name }} {{address.last_name }} 
                {% if address == customer.default_address %}
                <span class="default_address note">(Default Address)</span>
                {% endif %}</span>
              <span class="email">{{ address.email }}</span>
            </div>
            
            <div class="address note clearfix">
              <span class="i-address"><i class = "icon-home"></i></span>
              
              <span class="address1">{{ address.address1 }}</span>
              {% if address.address2 != "" %}
              <span class="address2">{{ address.address2 }}</span>
              {% endif %}
              <span class="city">{{ address.city}}, {% if address.province_code %}{{address.province_code}}, {% endif %}{{address.country}}</span>
              <span class="zip">{{ address.zip}}</span>
              <span class="phone">{{ address.phone }}</span>
            </div>
          </address>

        </div> 
        </div>
      </div><!-- end .address_table -->
      {% cycle '', '</div>' %}
      {% endfor %}
      
      <div id="address_pagination">{{ paginate | default_pagination }}</div>  
    {% endpaginate %}
    </div><!-- end #address_tables -->
  </div>

  <script type="text/javascript">
    // initialize observers on address selectors
    new Shopify.CountryProvinceSelector('address_country_new', 'address_province_new', {hideElement: 'address_province_container_new'});  
    {% for address in customer.addresses %}
      new Shopify.CountryProvinceSelector('address_country_{{address.id}}', 'address_province_{{address.id}}', {hideElement: 'address_province_container_{{address.id}}'});
    {% endfor %}
  </script>

</div><!-- /.content -->
<p>&nbsp;</p>