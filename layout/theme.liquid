<body class="{% if customer %}customer-logged-in {% endif %}template{{ template | split: '.' | first | camelize }}">

  <!-- Header -->
  {% if template != 'index' %}
  <header id="top">
    {% endif %}
    <div class="top">
      <div class="grid-container">
        <div class="grid-100 tablet-grid-100 mobile-grid-100 remove_padding add_bot_padding">
          <div class="grid-50 tablet-grid-50 mobile-grid-100 remove_padding hide-on-mobile">
            {% include 'customer-links' %}
            {% if settings.show_multiple_currencies %}
            {% include 'currencies-switcher' %}
            {% endif %}
          </div>
          <div class="grid-50 tablet-grid-50 mobile-grid-100 grid-parent">
            <div class="grid-85 tablet-grid-80 mobile-grid-50">
              {% if settings.show_header_search %}
              <form id="header-search" action="/search" method="get">
                <label for="top-search-input" class="visuallyhidden">Search</label>
                <input type="text" id="top-search-input" name="q" class="search-input" value="" accesskey="4"  autocomplete="off" placeholder="Search" />
                <button type="submit" id="top-search-submit" class="search-submit" value="Search">
                <i class="icon-search"></i>
                </button>
              </form>
              {% else %}
              <span style="text-indent: -999em; visibility: hidden;">Not available</span>
              {% endif %}
            </div>
            <div class="grid-15 tablet-grid-20 mobile-grid-50 remove_padding">
              {% if settings.show_header_cart %}
              <div id="umbrella" class="cart">
                <div class="cart-link">
                  <a href="#" class="num-items-in-cart">
                    <span class="icon">
                      <span>Cart</span>(<span class="number">{{ cart.item_count }}</span>)
                      <i class = "icon-caret-down"></i>
                    </span>
                  </a>
                </div>
                {% if settings.cart_dropdown %}
                <div id="cart-info" style="clear:both;">
                </div>
                {% endif %}
              </div><!-- /#umbrella -->
              <script type="text/javascript">

                jQuery(document).ready(function($) {
                  if(getWidthBrowser() <= 1024){
                    cartPopup();
                  }
                });
                /*Carts */

                function cartPopup(){
                  var button = $('.cart-link');
                  var box = $('#cart-info');
                  var form = $('.cart-link');
                  button.removeAttr('href');
                  button.mouseup(function(cart) {
                    box.toggle();
                    button.toggleClass('active');
                  });
                  form.mouseup(function() {
                    return false;
                  });
                  $(this).mouseup(function(cart) {
                    if(!($(cart.target).parent('.cart-link').length > 0)) {
                      button.removeClass('active');
                    }
                  });
                }
              </script>
              {% else %}
              <span style="text-indent: -999em; visibility: hidden;">Not available</span>
              {% endif %}<!-- /#umbrella -->
            </div>
          </div>
        </div>
      </div>
      <div class="grid-container">
        {% if template != 'index' %}
        <div class="wrapbody clearfix">
          {% endif %}
          <div class="grid-40 tablet-grid-40 mobile-grid-100 remove_padding">
            <h1 id="site-title">
              <a href="/" title = "{{ shop.name | escape }}">
                {% if settings.logo_image == "logo.png" %}
                <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name | escape }}" />
                {% else %}
                {{ settings.logo_text | escape }}
                {% endif %}
              </a>
            </h1>
          </div>

          <div class="navigation grid-60 tablet-grid-60">
            {% include 'navigation' %}
          </div>
          {% include 'navigation-mobile' %}
          {% if template != 'index' %}
        </div>
        {% endif %}
      </div>
      {% if template != 'index' %}
      <div class="grid-container">
        <span class="line"></span>
      </div>
      {% endif %}
    </div>
    {% if template != 'index' %}
  </header>
  {% endif %}
  {% if template == 'index' %}
  <div class="mainsilder">
    {% include 'home-carousel' %}
  </div>
  {% endif %}

  <!-- Content -->
  <div id="content" {% if template == 'index' %} class = "content-home" {% endif %} {% if template contains 'product' %} class = "pro-detail" {% endif %}>
    <section class="content grid-container {% if template contains 'product' %}remove_padding{% endif %}" >

      {% if template == 'list-collections' %}
      {% include 'collection-listing' %}
      {% else %}
  {% include 'lockdown' %}
{% if allowed %}
    {{ content_for_layout }}
{% else %}
    {% if template contains 'cart' %}
        {{ content_for_layout }}
    {% elsif customer %}
        {% include 'lock-message' %}
    {% else %}
        <meta content="0; url=/account/login?checkout_url={{ return_url }}" http-equiv="refresh" />
    {% endif %}
{% endif %}
      {% endif %}

    </section>
  </div><!-- /.content -->

  <!-- Footer -->
  <footer id="footer" class="clearfix">
    {% if template != 'index' %}
    <div class = "grid-container"><span class = "line"></span></div>
    {% endif %}
    <div class="grid-container remove_padding">
      {% include 'footer-top' %}
    </div>
    <div class="grid-container">
      <span class="line clearfix"></span>
    </div>
    <div class="grid-container">
      <div class="grid-100 tablet-grid-100 mobile-grid-100 grid-parent">
        <div class="grid-50 tablet-grid-50 mobile-grid-100 align-left remove_padding">
          <p class="copyright">&copy; {{ 'now' | date: '%Y' }} <a href="http://zddz.co.uk/">ZDDZ London Ltd</a>. Registered in England and Wales â„– 07932919. All Rights Reserved.</p>

        </div>
        <div class="grid-50 tablet-grid-50 mobile-grid-100 remove_padding">
          {% if settings.show_visa or settings.show_mastercard or settings.show_amex or settings.show_paypal or settings.show_moneybookers %}
          <ul id="footer-payment-methods">
            {% if settings.show_visa %}
