    #container, #container.slim{
          width: 748px;
          margin: 0 auto;
    }
    #overview{width: 97%;}
    #content {
      width: 95%;   
      border-right:none;
    }
    select#billing_address_selector, select#shipping_address_selector{width: 85%;}
    .form td input[type="text"], .form td input.short{width: 165px;}
